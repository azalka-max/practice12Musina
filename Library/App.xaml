<Application x:Class="Library.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Library"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!--MainPage-->
        <Style x:Key="TbBold20" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="btnMP" TargetType="Button">
            <Setter Property="Margin" Value="5, 5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="#FFAEF77C"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
        </Style>
        
        <!--BooksPage-->
        <Style x:Key="btnBP" TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Margin" Value="10, 0, 0, 0"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
        </Style>

        <Style x:Key="TbBP" TargetType="TextBox">
            <Setter Property="Width" Value="150"/>
        </Style>
    </Application.Resources>
</Application>
