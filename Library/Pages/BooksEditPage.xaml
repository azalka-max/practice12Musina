<Page x:Class="Library.Pages.BooksEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BooksEditPage">

    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Редактирование книги" FontSize="16" FontWeight="Bold" />

        <StackPanel Grid.Row="1" Margin="0,10,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="Название:" VerticalAlignment="Center" Width="80" />
                <TextBox Name="TBName" Width="420" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="Жанр:" VerticalAlignment="Center" Width="80" />
                <ComboBox Name="CBGenre" Width="200" />

                <TextBlock Text="Год:" VerticalAlignment="Center" Margin="20,0,6,0" />
                <TextBox Name="TBYear" Width="80" />

                <TextBlock Text="Статус:" VerticalAlignment="Center" Margin="20,0,6,0" />
                <ComboBox Name="CBStatus" Width="150">
                    <ComboBoxItem Content="Available"/>
                    <ComboBoxItem Content="Issued"/>
                    <ComboBoxItem Content="Reserved"/>
                </ComboBox>
            </StackPanel>

            <TextBlock Text="Авторы (выберите одного или несколько):" Margin="0,6,0,6" />
            <ListBox Name="LBAuthors" SelectionMode="Extended" Height="180" DisplayMemberPath="FIO" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Content="Сохранить" Click="BtnSave_Click" />
            <Button Content="Отмена" Click="BtnCancel_Click" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Page>
